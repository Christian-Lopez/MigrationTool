<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MigrationTool.DataMigrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MigrationTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" mc:Ignorable="d">

    <Grid x:Name="RootGrid" Padding="40" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="10">
            <InfoBar x:Name="MigrationStatusInfoBar" IsOpen="False" IsClosable="True" HorizontalAlignment="Stretch" />
            <TextBlock Text="Migration Settings" Style="{StaticResource TitleTextBlockStyle}"/>
        </StackPanel>
        <Grid Grid.Row="1" ColumnDefinitions="*, 300">
            <Grid Grid.Column="0" RowDefinitions="Auto, *">
                <AutoSuggestBox x:Name="TableSearchBox" 
                        Grid.Row="0"
                        PlaceholderText="Search tables by name or schema..." 
                        QueryIcon="Find"                        
                        Margin="0,0,0,10"/>
                <controls:DataGrid x:Name="TablesGrid" 
           Grid.Row="1"
           AutoGenerateColumns="False"
           SelectionMode="Extended"
           IsReadOnly="True"
           GridLinesVisibility="Horizontal"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="Table Name" Binding="{Binding Name}" Width="*"/>
                        <controls:DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="100"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Grid>
            <StackPanel Grid.Column="1" Padding="20,0,0,0">
                <TextBlock Text="Table Options" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,10"/>
                <NumberBox x:Name="RowLimitBox" 
                    Header="Row Limit (0 for all)" 
                    Value="100" 
                    PlaceholderText="e.g. 500"
                    Margin="0,0,0,20"/>
                <TextBox x:Name="WhereConditionBox" 
                    Header="WHERE Condition" 
                    PlaceholderText="e.g. IsActive = 1" 
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    Height="80"/>
                <TextBlock Text="Select the tables you wish to transfer using the list on the left." TextWrapping="Wrap" Opacity="0.7"/>
            </StackPanel>   
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Vertical" Spacing="10">
            <TextBlock x:Name="ProgressStatusText" Text="Ready" Style="{StaticResource CaptionTextBlockStyle}"/>
            <ProgressBar x:Name="MigrationProgress" 
                 Minimum="0" 
                 Maximum="100" 
                 Value="0" 
                 Height="10"
                 Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Click="RefreshTables_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Refresh"/>
                        <TextBlock Text="Refresh Tables"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource AccentButtonStyle}" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Sync"/>
                            <TextBlock Text="Start Migration"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>
