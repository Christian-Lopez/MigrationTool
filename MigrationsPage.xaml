<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MigrationTool.MigrationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MigrationTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Padding="40" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="10">
            <InfoBar x:Name="MigrationStatusInfoBar" IsOpen="False" IsClosable="True" HorizontalAlignment="Stretch" />
            <TextBlock Text="Migration Settings" Style="{StaticResource TitleTextBlockStyle}"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*, 300">
            <Grid Grid.Column="0" RowDefinitions="Auto, *">

                <!--<AutoSuggestBox x:Name="TableSearchBox" 
                Grid.Row="0"
                PlaceholderText="Search tables by name or schema..." 
                QueryIcon="Find"
                TextChanged="TableSearchBox_TextChanged"
                Margin="0,0,0,10"/>-->

                <controls:DataGrid x:Name="TablesGrid" 
                   Grid.Row="1"
                   AutoGenerateColumns="False"
                   SelectionMode="Extended"
                   IsReadOnly="True"
                   GridLinesVisibility="Horizontal"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="Table Name" Binding="{Binding Name}" Width="*"/>
                        <controls:DataGridTextColumn Header="Schema" Binding="{Binding Schema}" Width="100"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Grid>

        </Grid>
    </Grid>
</Page>
