<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MigrationTool.ConnectionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MigrationTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Padding="40" RowSpacing="20">


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Spacing="10">
            <InfoBar x:Name="StatusInfoBar" IsOpen="False" IsClosable="True" HorizontalAlignment="Stretch" />
            <TextBlock Text="Connection Settings" Style="{StaticResource TitleTextBlockStyle}"/>
        </StackPanel>

        <!--<TextBlock Text="SQL Data Bridge" Style="{StaticResource TitleTextBlockStyle}" Grid.Row="0"/>-->

        <Grid Grid.Row="1" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" 
             CornerRadius="8" Padding="20" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel Spacing="8">
                    <CheckBox x:Name="SourceUseWindowsAuth" 
           Content="Use Windows Authentication" 
           Checked="Auth_CheckChanged" 
           Unchecked="Auth_CheckChanged"/>
                    <TextBlock Text="Server Address" Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBox x:Name="SourceServer" PlaceholderText="e.g. localhost or 192.168.1.5"/>

                    <TextBlock Text="Database Name" Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBox x:Name="SourceDatabase" PlaceholderText="e.g. Sales_DB"/>

                    <Grid ColumnSpacing="10" x:Name="SourceGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Username" Style="{StaticResource CaptionTextBlockStyle}"/>
                            <TextBox x:Name="SourceUser" PlaceholderText="sa"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Password" Style="{StaticResource CaptionTextBlockStyle}"/>
                            <PasswordBox x:Name="SourcePassword" PlaceholderText="Required"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="Verify Connection" HorizontalAlignment="Stretch" Margin="0,10,0,0" Click="TestSourceConnection_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{ThemeResource LayerFillColorDefaultBrush}" 
             CornerRadius="8" Padding="20" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel Spacing="8">
                    <CheckBox x:Name="DestinationUseWindowsAuth" 
                     Content="Use Windows Authentication" 
                     Checked="Auth_CheckChanged" 
                     Unchecked="Auth_CheckChanged"/>
                    <TextBlock Text="Server Address" Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBox x:Name="DestinationServer" PlaceholderText="e.g. localhost or 192.168.1.5"/>

                    <TextBlock Text="Database Name" Style="{StaticResource CaptionTextBlockStyle}"/>
                    <TextBox x:Name="DestinationDatabase" PlaceholderText="e.g. Sales_DB"/>

                    <Grid ColumnSpacing="10" x:Name="DestinationGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Username" Style="{StaticResource CaptionTextBlockStyle}"/>
                            <TextBox x:Name="DestinationUser" PlaceholderText="sa"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Password" Style="{StaticResource CaptionTextBlockStyle}"/>
                            <PasswordBox x:Name="DestinationPassword" PlaceholderText="Required"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="Verify Connection" HorizontalAlignment="Stretch" Margin="0,10,0,0" Click="TestDestinationConnection_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
